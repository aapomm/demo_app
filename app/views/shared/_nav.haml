%header.topNav
  = link_to '/', :class => 'topNav_logo' do
    = image_tag 'sagip-icon.png', :class => 'topNav_logoImg'
  %h1.index_head Missing Persons Database
  %ul.topNav_list
    - if signed_in?
      = link_to :logout, :method => :delete do
        %li.topNav_listItem Log-out
    - else
      = link_to '/signin', :class => 'topNav_link' do
        %li.topNav_listItem Sign-in
